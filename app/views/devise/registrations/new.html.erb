<%= stylesheet_link_tag 'create_user' %>
<body style="background-color: #80C6EE" class="create-user">
<div  class="create-user" style="background-color: white,">
  <h2 style="text-align: center" class="title">Cadastrar Usu√°rio</h2><br>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="container text-center">
      <div class="mx-auto row">
        <div class=" mb-3 col-md-6">
          <%= f.text_field :name, autofocus: true, class: 'form-control', id: 'floatingInput', placeholder: 'Nome:'%>
        </div>
        <div class=" mb-3 col-md-6">
          <%= f.text_field :username, autofocus: true, class: 'form-control', id: 'floatingInput', placeholder: 'Username:' %>
        </div>
      </div>
      <div class="mx-auto row">
        <div class=" mb-3 col-md-6">
          <%= f.date_field :birthday, autofocus: true, class: 'form-control', id: 'floatingInput', placeholder: 'Data de nascimento::' %>
        </div>
        <div class=" mb-3 col-md-6">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', id: 'floatingInput', placeholder: 'E-mail:' %>
        </div>
      </div>
      <div class="mx-auto row">
        <div class=" mb-3 col-md-6">
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', id: 'floatingInput', placeholder: 'Senha'%>
         </div>
        <div class=" mb-3 col-md-6">
           <%= f.password_field :password_confirmation, autocomplete: "new-password"  , class: 'form-control', id: 'floatingInput', placeholder: 'Confirmar senha:'%>
        </div>
      </div>
 
    <br>
    <div class="mx-auto row">
      <div class="mb-3 col-md-12 d-grid gap-2 actions field">
        <%= f.submit "Cadastrar", class: "btn btn-primary", style:"background-color: #5649A7" %>
      </div>
    </div>

    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
</body>